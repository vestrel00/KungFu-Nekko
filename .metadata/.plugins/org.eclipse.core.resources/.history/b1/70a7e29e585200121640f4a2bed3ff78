package com.vestrel00.nekko.actors;

import com.badlogic.gdx.utils.Array;
import com.vestrel00.nekko.actors.components.Location;
import com.vestrel00.nekko.actors.components.SkullMonsterSprite;
import com.vestrel00.nekko.actors.components.ToungeMonsterSprite;

/**
 * Highest DPS out of all three monsters.
 * @author Estrellado, Vandolf
 *
 */
public class ToungeMonster extends Monster {

	private static long lastGrowlTime;
	private ToungeMonsterSprite toungeSprite;
	public int damage;
	public float knockBackDistance;

	public ToungeMonster(Array<Actor> targets, Location location,
			int maxHealth, float aggroRange, float motionRange) {
		super(targets, location, maxHealth, aggroRange, motionRange);
		toungeSprite = new ToungeMonsterSprite(this, atlas, color);
		sprite = toungeSprite;
		attackDelay = 2000000000L;
		location.setActor(this);
		reset(level);
	}

	@Override
	public void reset(int level) {
		knockBackDistance = 40.0f + (float) level * 2.0f;
		damage = 4 + level / 7; // long division ftw > level>>2
		this.maxHealth = 6 + level / 4;
		health = this.maxHealth;
		this.level = level;
	}

}
