package com.vestrel00.nekko.actors.components;

import com.badlogic.gdx.graphics.Color;
import com.badlogic.gdx.graphics.g2d.TextureAtlas.AtlasRegion;
import com.vestrel00.nekko.actors.Actor;
import com.vestrel00.nekko.actors.states.FaceState;

public class ChessPieceSprite extends Sprite {

	public ChessPieceSprite(Actor actor, Color color, AtlasRegion region) {
		super(actor, color);
		currentTexture = region;
	}

	@Override
	public void update() {
		xScale = (actor.faceState == FaceState.LEFT) ? -1.0f : 1.0f;
	}

	@Override
	public void onDeath() {
		// TODO Auto-generated method stub

	}

}
